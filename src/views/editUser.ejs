<h1>Cập nhật người dùng: <%= data.rows.username %></h1> 
<form action="/update-user/<%= data.rows.username %>" method="POST">
    <table class="table">
        <tbody class="table-group-divider">
            <tr>
                <th scope="col">Tài khoản</th>
                <td>
                    <input type="text" name="username" value="<%= data.rows.username || '' %>" readonly>
                </td>
            </tr>
            <tr>
                <th scope="col">Mật khẩu</th>
                <td>
                    <input type="text" name="password" value="<%= data.rows.password || '' %>" readonly>
                </td>
            </tr>
            <tr>
                <th scope="col">Họ tên</th>
                <td>
                    <input type="text" name="fullname" value="<%= data.rows.fullname || '' %>" required>
                </td>
            </tr>
            <tr>
                <th scope="col">Địa chỉ</th>
                <td>
                    <input type="text" name="address" value="<%= data.rows.address || '' %>" required>
                </td>
            </tr>
            <tr>
                <th scope="col">Giới tính</th>
                <td>
                    <select name="sex" required>
                        <option value="Nam" <%= data.rows.sex === 'Nam' ? 'selected' : '' %>>Nam</option>
                        <option value="Nữ" <%= data.rows.sex === 'Nữ' ? 'selected' : '' %>>Nữ</option>
                        <option value="Khác" <%= data.rows.sex === 'Khác' ? 'selected' : '' %>>Khác</option>
                    </select>
                </td>
            </tr>
            <tr>
                <th scope="col">Email</th>
                <td>
                    <input type="email" name="email" value="<%= data.rows.email || '' %>" required>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <button type="submit" class="btn btn-primary">Cập nhật</button>
                </td>
            </tr>
        </tbody>
    </table>
</form>
