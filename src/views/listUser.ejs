<style>
    thead th {
        border-bottom: 2px solid black !important; 
        text-align: left;
        padding: 10px; 
        background-color: #f8f9fa; 
    }
    .del {
        display: inline; 
    }
</style>
<table class="table table-striped">
    <thead>
        <tr>
            <th style="width: 50px;">STT</th>
            <th style="width: 150px;">Tài khoản</th>
            <th style="width: 200px;">Họ tên</th>
            <th style="width: 200px;">Địa chỉ</th>
            <th style="width: 100px;">Tác vụ</th>
        </tr>
    </thead>
    <tbody>
        <% for(let i = 0; i < data.rows.length; i++) { %>
            <tr>
                <th scope="row"><%= i + 1 %></th>
                <td><%= data.rows[i].username %></td>
                <td><%= data.rows[i].fullname %></td>
                <td><%= data.rows[i].address %></td>
                <td>
                    <a href="/list-user/<%= data.rows[i].username %>">
                        <span class="setting" style="color: blue; padding-right: 10px;">
                            <i class="fa fa-eye" aria-hidden="true"></i>
                        </span>
                    </a>

                    <a href="/edit-user/<%= data.rows[i].username %>">
                        <span class="setting" style="color: blue; padding-right: 10px;">
                            <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                        </span>
                    </a>
                    <form action="/delete-user" method="post" class="del" onsubmit="return confirm('Bạn có chắc chắn muốn xóa người dùng này?');">
                        <input type="hidden" value="<%= data.rows[i].username %>" name="username">
                        <label for="<%= data.rows[i].username %>">
                            <span class="setting" style="color: black;">
                                <i class="fa fa-trash" aria-hidden="true"></i>
                            </span>
                        </label>
                        <input type="submit" id="<%= data.rows[i].username %>" value="Xóa" style="display: none;">
                    </form>
                </td>
            </tr>
        <% } %>
    </tbody>
</table>
