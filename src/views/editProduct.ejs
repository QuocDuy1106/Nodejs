<div class="edit-container">
    <div class="edit-header">
        <h2>Chỉnh Sửa Sản Phẩm</h2>
    </div>
    <form action="/update-product/<%= data.product.masp %>" method="POST" enctype="multipart/form-data">
        <div class="edit-group">
            <label for="tenSP">Tên sản phẩm:</label>
            <input type="text" id="tenSP" name="ten" value="<%= data.product.tenSP %>" required>
        </div>
        <div class="edit-group">
            <label for="gia">Giá:</label>
            <input type="number" id="gia" name="gia" value="<%= data.product.gia %>" required>
        </div>
        <div class="edit-group">
            <label for="idnhom">Thể loại:</label>
            <select id="idnhom" name="idnhom">
                <% data.nhom.forEach(function(group) { %>
                    <option value="<%= group.idnhom %>" 
                        <%= (parseInt(data.product.idnhom) === parseInt(group.idnhom)) ? 'selected' : '' %> >
                        <%= group.tenNhom %>
                    </option>
                <% }); %>
            </select>
        </div>        
        <div class="edit-group">
            <label for="hinhanh">Hình ảnh:</label>
            <input type="file" id="hinhanh" name="hinhanh">
            <p>Ảnh hiện tại:</p>
            <img src="/uploads/<%= data.product.hinhanh %>" alt="<%= data.product.tenSP %>" class="current-image">
        </div>
        <div class="edit-group">
            <label for="mota">Mô tả:</label>
            <textarea id="mota" name="mota" rows="4"><%= data.product.mota %></textarea>
        </div>
        <div class="btn-save">
            <button type="submit">Lưu thay đổi</button>
        </div>
        <div class="btn-back">
            <a href="/list-product">Quay lại danh sách sản phẩm</a>
        </div>
    </form>
</div>

<style>
    .edit-container {
        max-width: 800px;
        margin: 20px auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        background-color: #f9f9f9;
    }
    .edit-header {
        text-align: center;
        margin-bottom: 20px;
    }
    .edit-group {
        margin-bottom: 15px;
    }
    .edit-group label {
        display: block;
        font-weight: bold;
        margin-bottom: 5px;
    }
    .edit-group input, .edit-group select, .edit-group textarea {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }
    .edit-group .current-image {
        max-width: 200px;
        height: auto;
        border-radius: 4px;
        margin-top: 10px;
    }
    .btn-save {
        text-align: center;
        margin-top: 20px;
    }
    .btn-save button {
        padding: 10px 20px;
        background-color: #28a745;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }
    .btn-save button:hover {
        background-color: #218838;
    }
    .btn-back {
        text-align: center;
        margin-top: 10px;
    }
    .btn-back a {
        padding: 10px 20px;
        text-decoration: none;
        background-color: #007bff;
        color: white;
        border-radius: 4px;
        transition: background-color 0.3s ease;
    }
    .btn-back a:hover {
        background-color: #0056b3;
    }
</style>
